{
  "name": "fairvrf-server",
  "version": "1.0.0",
  "description": "FairVRF Oracle Server with Auto-Rotation Hash Chain Management",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/service.js",
    "dev": "tsx src/service.ts",
    "test": "node --test --import tsx test/*.test.ts",
    "test:watch": "node --test --watch --import tsx test/*.test.ts",
    "test:coverage": "c8 node --test --import tsx test/*.test.ts",
    "generate-chain": "tsx scripts/generate-chain.ts",
    "lint": "eslint src test --ext .ts",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "viem": "^2.40.3",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.8.3",
    "tsx": "^4.19.2",
    "chai": "^5.1.2",
    "c8": "^10.1.2",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "vrf",
    "randomness",
    "oracle",
    "blockchain",
    "hash-chain",
    "provable-fairness"
  ],
  "author": "Diluk Angelo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dilukangelosl/fairvrf.git"
  },
  "homepage": "https://github.com/dilukangelosl/fairvrf",
  "bugs": {
    "url": "https://github.com/dilukangelosl/fairvrf/issues"
  }
}
